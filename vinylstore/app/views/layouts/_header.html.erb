<header class="navbar navbar-fixed-top navbar-inverse metal_header">
  <div class="container">
    <h4 id="logo">Good Vibrations Vinyl</h4>
    <nav>
        <ul class="nav navbar-nav navbar-right">
            <li><%= link_to "Home",   root_path %></li>
            <li><%= link_to "Register", register_path %></li>
            <li><%= link_to "Browse", catalog_path %></li>
            <li><%= link_to "Search", search_path %></li>
            <li><%= link_to "Shopping Cart", cart_path %></li>

        <% if user_signed_in? %>
          <li class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
              <%= current_user.username %>
              <span class="caret"></span>
            </a>
            <ul class="dropdown-menu" role="menu">
              <li><%= link_to 'Profile', edit_user_registration_path %></li>
              <li><%= link_to 'Log out', destroy_user_session_path, method: :delete %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to 'Log In', new_user_session_path %></li>
          <li><%= link_to 'Sign Up', new_user_registration_path %></li>
        <% end %>
      </ul>
    </nav>
 </div>
</header>