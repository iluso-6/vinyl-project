<p id="notice"><%= notice %></p>

<h1>Catalogue</h1>
     <% @items.each do |item| %>
<div class="jumbotron">
<div class="row">
  <div class="col-sm-6">
    <div class="card">
      <div class="card-block">
      <img class="card-img" alt="Card image cap" src = <%= item.image_url %> >
      </div>
    </div>
  </div>
  <div class="col-sm-6">
    <div class="card">
      <div class="card-block">
  <table class="table">
    <thead>
      <tr>
        <th>Artist</th>
        <th>Title</th>
        <th>Price</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= item.artist %></td>
        <td><%= item.title %></td>
        <td><%= item.price %></td>
      </tr>
</tbody>
<tr>
  <th colspan="3"><br></th>
</tr>
     <thead>
      <tr>
        <th>Genre</th>
        <th>Label</th>
        <th>Year</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= item.genre %></td>
        <td><%= item.label %></td>
        <td><%= item.year %></td>
        
      </tr>
   <tr>
  <th colspan="3"><br></th>
</tr>
        <td><button class="btn btn-success btn-sm"><%= link_to 'Show', item %></button></td>
        <td><button class="btn btn-primary btn-sm"><%= link_to 'Edit', edit_item_path(item) %></button></td>
        <td><button class="btn btn-danger btn-sm"><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
   
    
  </tbody>
  
</table>

      </div>
    </div>
  </div>
</div>

</div>
<% end %>


<button class="btn btn-success"><%= link_to 'New Item', new_item_path %></button>

